<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ScrollView
            android:id="@+id/sv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_sub_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    tools:ignore="ScrollViewSize">

                      <androidx.constraintlayout.widget.ConstraintLayout
                          android:id="@+id/cl_header"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="@dimen/_40sdp"
                          android:layout_marginEnd="@dimen/_40sdp"
                          android:background="@drawable/bg_rv_item_without_bordre"
                          android:elevation="@dimen/_5sdp"
                          android:padding="@dimen/_20sdp"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent">

                          <androidx.constraintlayout.widget.ConstraintLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent">

                              <de.hdodenhof.circleimageview.CircleImageView
                                  android:id="@+id/img_profile"
                                  style="@style/circle_image_view"
                                  android:layout_width="@dimen/_60sdp"
                                  android:layout_height="@dimen/_60sdp"

                                  android:elevation="@dimen/_10sdp"
                                  android:src="@mipmap/ic_launcher"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toTopOf="parent" />

                              <TextView
                                  android:id="@+id/text_userName"
                                  style="@style/text_header"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"

                                  android:layout_marginTop="@dimen/_10sdp"

                                  android:textSize="@dimen/txt_size_md"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toBottomOf="@+id/img_profile" />

                              <TextView
                                  android:id="@+id/text_userMobNo"
                                  style="@style/text_header"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"

                                  android:layout_marginTop="@dimen/_10sdp"

                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toBottomOf="@+id/text_userName" />
                          </androidx.constraintlayout.widget.ConstraintLayout>

                      </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_sub_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:background="@drawable/bg_upper_round_corener"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                            <TextView
                                android:id="@+id/txt_signOut"
                                style="@style/text_normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="@string/sign_out"
                                android:textSize="@dimen/txt_size_vsm"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:drawableEndCompat="@drawable/ic_baseline_logout_24" />


                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent=".5" />

                            <TextView
                                android:id="@+id/btn_change_password"
                                style="@style/text_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_110sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_3sdp"
                                android:text="@string/change_password_sm"
                                android:textColor="@color/app_theme_color"
                                android:textSize="@dimen/_15sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_24"
                                app:drawableTint="@color/app_theme_color" />


                            <ImageView
                                android:id="@+id/reward"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"

                                android:layout_marginTop="@dimen/_25sdp"
                                android:padding="4dp"

                                android:src="@drawable/reward"
                                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/btn_change_password"
                                android:contentDescription="@string/rewards_earned" />


                            <TextView
                                android:id="@+id/text_rewardAmt_header"
                                style="@style/text_normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/rewards_earned"
                                android:textSize="@dimen/txt_size_vsm"
                                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/reward" />

                        <TextView
                            android:id="@+id/text_rewardAmt"
                            style="@style/text_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"

                            android:textSize="@dimen/txt_size_sm"
                            app:layout_constraintEnd_toEndOf="@+id/text_rewardAmt_header"

                            app:layout_constraintStart_toStartOf="@+id/text_rewardAmt_header"
                            app:layout_constraintTop_toBottomOf="@+id/text_rewardAmt_header" />

                        <ImageView
                                android:id="@+id/referd_user"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"

                                android:src="@drawable/referral"


                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/guideline4"
                                app:layout_constraintTop_toTopOf="@+id/reward"
                                android:contentDescription="@string/user_referred" />

                            <TextView
                                android:id="@+id/text_referredAmt_header"
                                style="@style/text_normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_referred"
                                android:textSize="@dimen/txt_size_vsm"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline4"
                                app:layout_constraintTop_toTopOf="@+id/text_rewardAmt_header" />

                            <TextView
                                android:id="@+id/text_referredAmt"
                                style="@style/text_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/txt_size_sm"
                                app:layout_constraintEnd_toEndOf="@+id/text_referredAmt_header"
                                app:layout_constraintStart_toStartOf="@+id/text_referredAmt_header"
                                app:layout_constraintTop_toBottomOf="@+id/text_referredAmt_header" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_35sdp"
                                android:layout_marginEnd="@dimen/_15sdp"

                                app:cardCornerRadius="@dimen/_10sdp"

                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/text_rewardAmt">


                                <ImageView
                                    android:id="@+id/img_refer_banner"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_120sdp"

                                    android:scaleType="fitXY"
                                    android:src="@drawable/profile_banner"
                                    android:contentDescription="@string/banner" />


                            </androidx.cardview.widget.CardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>


</layout>